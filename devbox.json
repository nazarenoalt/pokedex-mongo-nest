{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "mongodb@7.0",
    "mongodb-tools",
    "mongodb-compass@latest"
  ],
  "shell": {
    "init_hook": [
      "mkdir -p ./mongo"
    ],
    "scripts": {
      "start-db": [
        "mongod --dbpath ./mongo --port 27017 --bind_ip_all"
      ],
      "stop-db": [
        "mongod --shutdown --dbpath ./mongo"
      ]
    }
  },
  "env": {
    "MONGODB_DATABASE": "nest-pokemon",
    "MONGODB_PORT":     "27017",
    "MONGO_DATA_DIR":   "./mongo"
  }
}
